---

<Layout title="Talleres">
    <div class="container">
        <header class="page-header">
            <h1>Workshops y Masterclasses de FECIT</h1>
            <p>Expand your skills and learn from industry experts.</p>
        </header>
        <div class="workshops-list">
            {
                allWorkshops.map((ws) => (
                    <WorkshopCard {...ws} isDetailedView={true} />
                ))
            }
        </div>
    </div>
</Layout>

<style>
    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    .workshops-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    {/* mobile */}
    @media (min-width: 992px) {
        .workshops-list {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
