---
import Layout from "../layouts/Layout.astro";
import WorkshopCard from "../components/WorkshopCard.astro";

// todo: replace dummy data
const featuredWorkshops = [
	{
		title: "Cinematography Masterclass",
		instructor: "Sofia Castillo",
		link: "#",
	},
	{
		title: "Directing the Actor",
		instructor: "with Sofia Castillo",
		link: "#",
	},
	{
		title: "Screenwriting Essentials",
		instructor: "with Marco Vega",
		link: "#",
	},
	{
		title: "Sound Design & Mixing",
		instructor: "with Diana Flores",
		link: "#",
	},
];
---

<Layout title="Inicio">
	<section class="hero">
		<div class="hero-content">
			<h1>12° FESTIVAL DE CINE DE TRUJILLO</h1>
			<h3>10 AL 15 DE NOVIEMBRE DEL 2025</h3>
			<p>Un encuentro con el cine peruano</p>
			<div class="hero-actions">
				<a href="/schedule" class="button">Ver Programación</a>
			</div>
		</div>
	</section>

	<section id="workshops" class="container">
		<h2>Explore Our Workshops</h2>
		<p>Hands-on learning experiences with industry professionals.</p>
		<div class="workshop-grid">
			{featuredWorkshops.map((ws) => <WorkshopCard {...ws} />)}
		</div>
	</section>
</Layout>

<style>
	.hero {
		height: 70vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		background: url("/assets/hero-bg.jpg") no-repeat center center/cover; /* todo: add bg image */
		position: relative;
	}
	.hero::after {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.6);
	}
	.hero-content {
		position: relative;
		z-index: 2;
	}
	.hero-actions {
		margin-top: 2rem;
		display: flex;
		gap: 1rem;
		justify-content: center;
	}
	.button.secondary {
		background-color: transparent;
		border: 1px solid var(--color-text);
	}
	#workshops {
		text-align: center;
	}
	.workshop-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
		margin-top: 2rem;
	}

	/* mobile */
	@media (min-width: 768px) {
		.workshop-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
	@media (min-width: 1024px) {
		.workshop-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}
</style>
